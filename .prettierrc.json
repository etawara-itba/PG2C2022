{
  "semi": false,
  "tabWidth": 4,
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "singleQuote": false,
        "tabWidth": 2,
        "trailingComma": "none",
        "useTabs": false
      }
    },
    {
      "files": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"],
      "options": {
        "bracketSpacing": true,
        "endOfLine": "crlf",
        "printWidth": 120,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all"
      }
    }
  ]
}
